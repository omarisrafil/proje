<h1>All users | <%= link_to 'New User', new_user_registration_path %></h1>
<p id="notice"><%= notice %></p>
<% @users.each do |user| %>
  <div id="container">
    <p>
      <strong>Name:</strong> <%= user.name %>
    </p>
    <p>
      <strong>Name:</strong> <%= user.email %>
    </p>
    <p>
      <strong>Tasks number:</strong>
      <%= user.tasks.count() %>
    </p>
  </div>
  <p class="center">
    <%= link_to 'Show', user %> | 
    <%= link_to 'Edit', edit_user_path(user) %> | 
    <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  <br>
<% end %>
