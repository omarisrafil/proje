<p id="notice"><%= notice %></p>
<div class="center">
  <div id="container">
  	<p>
      <strong>User ID:</strong>
      <%= @user.id %>
    </p>
    <p>
  	  <strong>Name:</strong>
  	  <%= @user.name %>
  	</p>
  	<p>
  	  <strong>Email:</strong>
  	  <%= @user.email %>
  	</p>
    <p>
      <strong>Tasks number:</strong>
      <%= @user.tasks.count() %>
    </p>
  </div>
  <br>
  <%= link_to 'Edit', edit_user_path(@user) %> 
  <%#= link_to 'Back', @user %>
</div>
<br>
<h2 class="center">Tasks | <%= link_to 'New Task', new_task_path %></h2>

<div id="container">
<% if @user.tasks.any?
    i = 1 %>
      
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= i %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% i = i + 1
    end %>
  </tbody>
</table>
<% else %>
  <p class="center">No task found</p>
<% end %>
</div>
