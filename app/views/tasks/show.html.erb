<div class="wrapper">
  <p id="notice"><%= notice %></p>
  <div class="center">
  	<p>
  	  <strong>Title:</strong>
      <%= @task.title %>
  	</p>
  	<p>
      <strong>Owner:</strong>
  	  <%= @task.user.name %>
  	</p>
  	<p>
  	  <strong>Content:</strong>
  	  <div id="container">
  	  	<%= simple_format(@task.content) %>
	  </div>
  	</p>
  	<%= link_to 'Edit', edit_task_path(@task) %> |
  	<%= link_to 'Back', tasks_path %>
  </div>
</div>