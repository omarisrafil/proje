<div class="wrapper">
  <p id="notice"><%= notice %></p>
  <h1>All tasks | <%= link_to 'New Task', new_task_path %></h1>
  <br>
  <% nopost = true %>
    <div class="table_container">
      <table>
        <thead>
          <tr>
            <th id="title">Title</th>
            <th id="content">Content</th>
            <th id="op"></th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <% if task.user == current_user %>
              <% nopost = false %>
              <tr>
                <td><%= task.title %></td>
                <td><%= simple_format(truncate(task.content, :length => 86)) %></td>
                <td id="op"><%= link_to 'Show', task %> |
        <%= link_to 'Edit', edit_task_path(task) %> |
        <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

  <% if nopost %>
      <div id="container">
          <p class="center">No task found</p>
      </div>
    <% end %>  
</div>